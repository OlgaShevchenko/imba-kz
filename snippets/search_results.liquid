{% if search.performed? and search.results != empty %}
	{% for product in search.results %}
		<div class="collection__item">
			{% include 'collection-item' %}
		</div>
	{% endfor %}
	{% comment %}
	{% elsif search.performed? and search.results == empty %}
		<div class="cell-12">
		<div class="notice is-info">
		{{ messages.search_is_fail }}
		</div>
		</div>
	{% else %}
		<div class="cell-12">
		<div class="notice is-info">
		{{ messages.search_is_empty }}
		</div>
		</div>
	{% endcomment %}
{% endif %}
	
	
